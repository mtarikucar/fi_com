<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
	<h1 class="text-white text-center">Add Post</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

		<div class="row text-center">
			<div class="col-md-12">
				<div class="section-header">
					<h2 class="title">Add A Post</h2>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/posts/test" method="POST" enctype="multipart/form-data">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								<input class="form-control" name="title" type="title" placeholder="title *"
									required="required" data-validation-required-message="enter your title">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<textarea class="form-control" name="content" placeholder="content *"
									required="required" data-validation-required-message="write your idea"></textarea>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="post_img" type="file" placeholder="title *"
									required="required" data-validation-required-message="enter your title">
								<p class="help-block text-danger"></p>
							</div>
						</div>

						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">send</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>